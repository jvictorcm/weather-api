{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "sensorId": {
      "type": "string"
    },
    "metrics": {
      "type": "object",
      "properties": {
        "temperature": {
          "type": "number"
        },
        "humidity": {
          "type": "number"
        },
        "windSpeed": {
          "type": "number"
        }
      },
      "required": [
        "temperature",
        "humidity",
        "windSpeed"
      ]
    }
  },
  "required": [
    "sensorId",
    "metrics"
  ]
}